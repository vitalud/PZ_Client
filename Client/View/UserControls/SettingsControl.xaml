<UserControl x:Class="Client.View.UserControls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" MinHeight="600" MinWidth="1000"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             FontFamily="Inter" FontSize="12" Background="White">

    <UserControl.Resources>
        <Style x:Key="SettingsLabel" TargetType="Label" BasedOn="{StaticResource MaterialDesignLabel}">
            <Setter Property="Margin" Value="0, 5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="SettingsTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="md:HintAssist.HintPaddingBrush" Value="White"/>
        </Style>
        <Style x:Key="SettingsStackPanel" TargetType="StackPanel">
            <Setter Property="Margin" Value="20, 0"/>
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="DockPanel.Dock" Value="Left"/>
        </Style>
        <Style x:Key="SettingsSeparator" TargetType="Separator" BasedOn="{StaticResource MaterialDesignSeparator}">
            <Setter Property="Margin" Value="0, 10"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <DockPanel Margin="20">
            <Label Content="Keys" DockPanel.Dock="Top" FontSize="16"
                   FontWeight="Bold"/>

            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">

                <!--Okx keys-->
                <StackPanel>
                    <Label Content="Okx" Style="{StaticResource SettingsLabel}"/>
                    <DockPanel>
                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="Api key"
                                     Text="{Binding OkxApi, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="Secret key"
                                     Text="{Binding OkxSecret, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="Secret word"
                                     Text="{Binding OkxWord, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>

                <Separator Style="{StaticResource SettingsSeparator}"/>

                <!--Binance keys-->
                <StackPanel>
                    <Label Content="Binance" Style="{StaticResource SettingsLabel}"/>
                    <DockPanel>
                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="Api key"
                                     Text="{Binding BinanceApi, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="Secret key"
                                     Text="{Binding BinanceSecret, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>

                <Separator Style="{StaticResource SettingsSeparator}"/>

                <!--Bybit keys-->
                <StackPanel >
                    <Label Content="Bybit" Style="{StaticResource SettingsLabel}"/>
                    <DockPanel>
                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="Api key"
                                     
                                     Text="{Binding BybitApi, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="Secret key"
                                     Text="{Binding BybitSecret, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>

                <Separator Style="{StaticResource SettingsSeparator}"/>

                <!--Quik keys-->
                <StackPanel>
                    <Label Content="Quik" Style="{StaticResource SettingsLabel}"/>
                    <DockPanel Margin="0, 0, 0, 10">
                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="Client Code"
                                     Text="{Binding QuikClientCode, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </DockPanel>
                    
                    <DockPanel>
                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="SPBFUT Account"
                                     Text="{Binding QuikFirst, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="TQBR Account"
                                     Text="{Binding QuikSecond, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource SettingsStackPanel}">
                            <TextBox Style="{StaticResource SettingsTextBox}"
                                     md:HintAssist.Hint="CETS Account"
                                     Text="{Binding QuikThird, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>

                <Separator Style="{StaticResource SettingsSeparator}"/>

                <Button Content="Save" Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        Command="{Binding SaveCommand}"
                        Width="100" 
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
