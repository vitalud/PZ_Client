<UserControl x:Class="Client.View.UserControls.MultiCryptoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:control="clr-namespace:Client.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <Style x:Key="MultiConnectionStatusStyle" TargetType="Label">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                    <Setter Property="Content" Value="Connected"/>
                    <Setter Property="Foreground" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsConnected}" Value="False">
                    <Setter Property="Content" Value="Waiting for Quik"/>
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <DockPanel>
                <Border Margin="5" VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Width="100" HorizontalAlignment="Right">
                    <StackPanel>
                        <Label Content="Okx" FontSize="12" 
                                   Padding="1" Foreground="Gray"
                                   FontWeight="DemiBold" />
                        <StackPanel Orientation="Horizontal">
                            <Label Padding="1" FontSize="12" FontWeight="DemiBold">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OkxStatus}" Value="True">
                                                <Setter Property="Content" Value="Connected"/>
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding OkxStatus}" Value="False">
                                                <Setter Property="Content" Value="Disconnected"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" DockPanel.Dock="Right"
                        Style="{StaticResource VerticalLineBorderStyle}" />

                <Border Margin="5" VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Width="100" HorizontalAlignment="Right">
                    <StackPanel>
                        <Label Content="Binance" FontSize="12" 
                                   Padding="1" Foreground="Gray"
                                   FontWeight="DemiBold" />
                        <StackPanel Orientation="Horizontal">
                            <Label Padding="1" FontSize="12" FontWeight="DemiBold">
                                <Label Padding="1" FontSize="12" FontWeight="DemiBold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding BinanceStatus}" Value="True">
                                                    <Setter Property="Content" Value="Connected"/>
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding BinanceStatus}" Value="False">
                                                    <Setter Property="Content" Value="Disconnected"/>
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>

                            </Label>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" DockPanel.Dock="Right"
                        Style="{StaticResource VerticalLineBorderStyle}" />

                <Border Margin="5" VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Width="100" HorizontalAlignment="Right">
                    <StackPanel>
                        <Label Content="Bybit" FontSize="12" 
                                   Padding="1" Foreground="Gray"
                                   FontWeight="DemiBold" />
                        <StackPanel Orientation="Horizontal">
                            <Label Padding="1" FontSize="12" FontWeight="DemiBold">
                                <Label Padding="1" FontSize="12" FontWeight="DemiBold">
                                    <Label.Style>
                                        <Style TargetType="Label">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding BybitStatus}" Value="True">
                                                    <Setter Property="Content" Value="Connected"/>
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding BybitStatus}" Value="False">
                                                    <Setter Property="Content" Value="Disconnected"/>
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Label.Style>
                                </Label>

                            </Label>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" DockPanel.Dock="Right"
                        Style="{StaticResource VerticalLineBorderStyle}" />

                <Button x:Name="TestButton" Command="{Binding TestCommand}" 
                        DockPanel.Dock="Left" HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignIconButton}">
                    <materialDesign:PackIcon Kind="AutoFix" />
                </Button>
            </DockPanel>
        </Grid>
        
        <Grid Grid.Row="1">
            <control:SubscriptionsControl Subscriptions="{Binding Subscriptions}"/>
        </Grid>
    </Grid>

</UserControl>
