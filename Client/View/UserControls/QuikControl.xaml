<UserControl x:Class="Client.View.UserControls.QuikControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:control="clr-namespace:Client.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <Style x:Key="QuikConnectionStatusStyle" TargetType="Label">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                    <Setter Property="Content" Value="Connected"/>
                    <Setter Property="Foreground" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsConnected}" Value="False">
                    <Setter Property="Content" Value="Waiting for Quik"/>
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <DockPanel>
                <Border Margin="5" VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Width="100" HorizontalAlignment="Right">
                    <StackPanel>
                        <Label Content="Balance" FontSize="12" 
                                   Padding="1" Foreground="Gray"
                                   FontWeight="DemiBold" />
                        <StackPanel Orientation="Horizontal">
                            <Label Content="RUB " FontSize="12" Foreground="Green"
                                        Padding="1" FontWeight="DemiBold"/>
                            <Label Content="{Binding Balance}" FontSize="12" 
                                        Foreground="Green"
                                        Padding="1" FontWeight="DemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" DockPanel.Dock="Right"
                        Style="{StaticResource VerticalLineBorderStyle}" />

                <Border Margin="5" VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Width="100" HorizontalAlignment="Right">
                    <StackPanel>
                        <Label Content="Status" FontSize="12" 
                                   Padding="1" Foreground="Gray"
                                   FontWeight="DemiBold" />
                        <StackPanel Orientation="Horizontal">
                            <Label Style="{StaticResource QuikConnectionStatusStyle}" 
                                       Padding="1" FontSize="12" FontWeight="DemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" DockPanel.Dock="Right"
                        Style="{StaticResource VerticalLineBorderStyle}" />

                <Button x:Name="TestButton" Command="{Binding TestCommand}" 
                        DockPanel.Dock="Left" HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignIconButton}">
                    <materialDesign:PackIcon Kind="AutoFix" />
                </Button>
            </DockPanel>
        </Grid>
        
        <Grid Grid.Row="1">
            <control:SubscriptionsControl Subscriptions="{Binding Subscriptions}"/>
        </Grid>
    </Grid>

</UserControl>
